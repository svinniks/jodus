CREATE TABLE json_values (
    id NUMBER NOT NULL,
    parent_id NUMBER,
    type CHAR,
    name VARCHAR2(4000),
    value VARCHAR2(4000),
    locked CHAR,
    CONSTRAINT jsvl_pk PRIMARY KEY(id),
    CONSTRAINT jsvl_jsvl_fk FOREIGN KEY(parent_id) REFERENCES json_values(id) ON DELETE CASCADE
)
